{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-shadow": ["off", { "builtinGlobals": false, "hoist": "functions", "allow": [] }],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.js",
                    "**/*.spec.js"
                ]
            }
        ],
        "rules": {
            "eslint linebreak-style": [
                0,
                "error",
                "windows"
            ]
        }
    }
}